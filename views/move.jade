include ./partials/_layout
include ./partials/_navigation
script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.4.5/socket.io.js')

.content
  h1.page-header Motion Control
  .row.center-sm
    .col-xs-12.col-sm.col-md-6.col-lg-5
      .box
        h4 Accelerometer
        #accel-graph(style='width:400px;height:300px')
    .col-xs-12.col-sm.col-md-6.col-lg-7
      .box
        h4 Speedometer
        #speed-graph(style='width:600px;height:300px')
  .ctrl-wrapper.row
    .col-xs-12.col-sm-6
      h4 Direction
      .row.center-xs
          button#up-btn.ctrl-btn
            img(src='static/img/arrow-down.svg')
      .row.center-xs
        button#left-btn.ctrl-btn
          img(src='static/img/arrow-down.svg')
        button#down-btn.ctrl-btn
          img(src='static/img/arrow-down.svg')
        button#right-btn.ctrl-btn
          img(src='static/img/arrow-down.svg')
    .col-xs-12.col-sm-6
      h4 Speed
      .row.center-xs
        button#slow-btn.ctrl-btn O
        button#fast-btn.ctrl-btn P
      .row.center-xs
        .speed-indicator -
        .speed-indicator +
            
script(src="static/vendor/jquery.min.js", charset="utf-8")
script(type='text/javascript', src='static/js/motion-socket.js')
script(type='text/javascript', src='static/js/gamepad.js')
script(src="static/vendor/jquery.flot.min.js", charset="utf-8")
